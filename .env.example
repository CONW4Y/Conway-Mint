# ============================================
# CONWAY DEPLOY - Configuration
# ============================================

# --- Solana Configuration ---
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_WS_URL=wss://api.mainnet-beta.solana.com
SOLANA_PRIVATE_KEY=           # Base58 encoded. Leave empty to auto-generate on first run
SOLANA_NETWORK=mainnet-beta   # mainnet-beta | devnet

# --- Creator Configuration ---
CREATOR_ADDRESS=              # Your Solana address - receives fee split + audit rights
CREATOR_FEE_SPLIT=10          # Percentage of net earnings sent to creator (0-50)

# --- Token Deployment ---
DEFAULT_TOKEN_DECIMALS=9
DEFAULT_INITIAL_SUPPLY=1000000000    # 1 billion
CREATOR_SUPPLY_RETENTION=5           # % of supply retained by agent
LP_ALLOCATION_PERCENT=80             # % of supply added to liquidity
MAX_CONCURRENT_TOKENS=5              # Max active tokens at once
DEPLOY_COOLDOWN_MINUTES=60           # Min time between deployments

# --- Pump.fun Integration ---
PUMPFUN_ENABLED=true
PUMPFUN_INITIAL_BUY_SOL=0.5         # SOL to spend on initial buy (creates price)

# --- Raydium Integration ---
RAYDIUM_ENABLED=true
RAYDIUM_INITIAL_LP_SOL=1.0          # SOL paired in initial LP

# --- Jupiter Swap ---
JUPITER_API_URL=https://quote-api.jup.ag/v6

# --- Treasury Management ---
SURVIVAL_RESERVE_SOL=0.5            # Always keep this much SOL for gas
MIN_EARNINGS_BEFORE_HARVEST=0.1     # Min SOL earnings before collecting
AUTO_CONVERT_TO_USDC=true           # Auto-swap earnings to USDC
USDC_MINT=EPjFWdd5AufqSSqeM2qN1xzybapC8G4wEGGkZwyTDt1v

# --- Conway Cloud ---
CONWAY_API_KEY=                      # Auto-provisioned via SIWE if empty
CONWAY_CREDIT_WARNING_THRESHOLD=5.0  # Alert when credits below this

# --- Strategy ---
TREND_SOURCES=twitter,reddit,dexscreener  # Data sources for trend analysis
AI_MODEL_PREFERENCE=claude-opus         # Model for naming/strategy decisions
RISK_TOLERANCE=medium                    # low | medium | high
LAUNCH_STRATEGY=memecoin_first           # memecoin_first | utility_first | mixed

# --- Monitoring ---
HEARTBEAT_INTERVAL_MS=30000          # How often to check portfolio
LOG_LEVEL=info                       # debug | info | warn | error
PORTFOLIO_WEBHOOK_URL=               # Optional webhook for portfolio updates
